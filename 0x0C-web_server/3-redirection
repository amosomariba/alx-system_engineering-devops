#!/usr/bin/env bash
# Installs nginx and configures a 301 redirect from /redirect_me to YouTube

# Update packages and install nginx
apt-get update -y
apt-get install nginx -y

# Ensure Nginx default config exists
NGINX_DEFAULT="/etc/nginx/sites-available/default"

# Insert redirect block using sed (multi-line)
sed -i '/location \/ {/a \
    \n    location /redirect_me {\n        return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;\n    }' "$NGINX_DEFAULT"

# Start or restart nginx without using systemctl
if command -v service &> /dev/null; then
    service nginx restart
else
    /etc/init.d/nginx restart
fi
