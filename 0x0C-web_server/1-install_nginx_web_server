#!/usr/bin/env bash
# Installs and configures Nginx to serve 'Hello World!' on port 80

# Update package list and install nginx non-interactively
apt-get update -y
apt-get install nginx -y

# Replace default web page with 'Hello World!'
echo "Hello World!" > /var/www/html/index.nginx-debian.html

# Start nginx using service (not systemctl)
service nginx start || /etc/init.d/nginx start
