#!/usr/bin/env bash
# Installs Nginx and sets up a custom 404 page with the message "Ceci n'est pas une page"

# Update and install nginx
apt-get update -y
apt-get install nginx -y

# Custom 404 content
echo "Ceci n'est pas une page" > /var/www/html/custom_404.html

# Path to Nginx default config
NGINX_DEFAULT="/etc/nginx/sites-available/default"

# Insert error_page directive using sed (ShellCheck-compliant)
sed -i '/location \/ {/a error_page 404 /custom_404.html;\nlocation = /custom_404.html {\n    internal;\n}' "$NGINX_DEFAULT"

# Restart nginx without systemctl
if command -v service &> /dev/null; then
    service nginx restart
else
    /etc/init.d/nginx restart
fi
