#!/bin/bash
w=$(echo "$WATER" | tr 'water' '01234') s=$(echo "$STIR" | tr 'stir.' '01234') wd=0 sd=0 i=0 while [ $i -lt ${#w} ] do wd=$((wd*5 + ${w:$i:1})) i=$((i+1)) done i=0 while [ $i -lt ${#s} ] do sd=$((sd*5 + ${s:$i:1})) i=$((i+1)) done sum=$((wd+sd)) r="" while [ $sum -gt 0 ] do r="$(echo 'bestchol' | cut -c$((sum%8+1)))$r" sum=$((sum/8)) done echo "$r"